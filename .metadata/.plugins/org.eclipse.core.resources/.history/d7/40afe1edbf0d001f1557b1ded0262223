package app;

import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.net.Socket;
import java.util.List;

import Entities.NhanVien;
import Services.EntityManagerCreate;
import dao.DangNhap_DAO;
import dao.HoaDon_DAO;
import dao.NhanVien_DAO;
import dao.ThucDon_DAO;
import dao.User;
import jakarta.persistence.EntityManager;

public class ClientHandler implements Runnable{
	private Socket socketClient;
	private ObjectInputStream in;
	private ObjectOutputStream out;
	private EntityManagerCreate emfUtil;
	private EntityManager em;
	private DangNhap_DAO dndao;
	private HoaDon_DAO hddao;
	private NhanVien_DAO nvdao;
	private ThucDon_DAO tddao;
	private User user;
	
	public ClientHandler(Socket socketClient) {
		super();
		this.socketClient = socketClient;
		emfUtil = new EntityManagerCreate();
		em = emfUtil.getEnManager();
		dndao = new DangNhap_DAO(em);
		nvdao = new NhanVien_DAO(em);
		hddao = new HoaDon_DAO(em);
		tddao = new ThucDon_DAO(em);
	}
	
	@Override
	public void run() {
		try {
			in = new ObjectInputStream(socketClient.getInputStream());
			out = new ObjectOutputStream(socketClient.getOutputStream());
			
			while(true) {
				String clientRequest = in.readUTF();
				System.out.println("Client Yeu Cau: "+clientRequest);
				switch (clientRequest) {
				case "getNVbyTKandMK":
					String tk = in.readUTF();
					String mk = in.readUTF();
					boolean nv = dndao.getTaiKhoanMatKhau(tk, mk);
					out.writeObject(nv);
					out.flush();		
					break;
					
				case "getNVbyTK":
					String tk1 = in.readUTF();

					List<NhanVien> listNV= dndao.getTaiKhoan(tk1);
					out.writeObject(listNV);
					out.flush();		
					break;
				default:
					break;
				}
			}
			
			
		} catch (Exception e) {
			e.printStackTrace();
		}finally {
			try {
				in.close();
				out.close();
				
			} catch (IOException ioe) {
				ioe.printStackTrace();
			}
			emfUtil.closeEnManager();
			emfUtil.closeEnManagerFactory();
		}
		
	}
	
}
