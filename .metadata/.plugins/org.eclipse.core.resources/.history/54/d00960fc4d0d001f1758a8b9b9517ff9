package dao;

import java.util.List;


import Entities.NhanVien;
import jakarta.persistence.EntityManager;
import jakarta.persistence.EntityManagerFactory;
import jakarta.persistence.Persistence;
import jakarta.persistence.TypedQuery;


public class DangNhap_DAO {
	private EntityManager entityManager;

    public DangNhap_DAO() {
        EntityManagerFactory entityManagerFactory = Persistence.createEntityManagerFactory("2t_server");
        entityManager = entityManagerFactory.createEntityManager();
    }
    
    public List<NhanVien> getTaiKhoan(String tk) {
        TypedQuery<NhanVien> query = (TypedQuery<NhanVien>) entityManager.createQuery("SELECT t FROM NhanVien t WHERE t.tK = :tK", NhanVien.class);
        query.setParameter("tK", tk);
        return query.getResultList();
    }
    
    public boolean getTaiKhoanMatKhau(String tk, String mk) {
        TypedQuery<Long> query = entityManager.createQuery("SELECT COUNT(t) FROM NhanVien t WHERE t.tK = :tK and t.mK = :mK", Long.class);
        query.setParameter("tK", tk);
        query.setParameter("mK", mk);
        Long count = query.getSingleResult();
        return count > 0;
    }

    public void close() {
        entityManager.close();
    }
}
