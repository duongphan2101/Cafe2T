	public void setThongTin(String tenNV) {
		NhanVien_DAO nvdao = new NhanVien_DAO();
		List<NhanVien> nvs = nvdao.getNhanVienByTen(tenNV);
		for(NhanVien nv : nvs) {
			Object t [] = {nv.getMaNV(), nv.getTenNV(), nv.getGioiTinh(), nv.getNgaySinh(), nv.getSDT(), nv.getCMND(), nv.getDiaChi(), nv.getEmail()
					,nv.gettK(), nv.getmK(), nv.getTrangThaiLamViec()};
			//11
			lbl_ma.setText("Mã Nhân Viên:" +t[0]);
			lbl_ten.setText("Tên Nhân Viên: "+t[1]);
			lbl_gioiTinh.setText("Giới Tính: "+t[2]);
			lbl_ngaySinh.setText("Ngày Sinh: "+t[3]);
			lbl_sdt.setText("Số Điện Thoại: "+t[4]);
			lbl_sccc.setText("Số Căn Cước: "+t[5]);
			lbl_dc.setText("Địa chỉ: "+t[6]);
			lbl_email.setText("Email: "+t[7]);
			lbl_tk.setText("Tài Khoản: "+t[8]);
			lbl_mk.setText("Mật Khẩu: "+t[9]);
			lbl_ttlv.setText("Trạng Thái Làm Viêc: "+t[10]);
		}
	}
}
